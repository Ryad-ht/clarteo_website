# Clartéo Lab - Configuration de sécurité
# Accès public sans token - Aucun impact sur le site principal

# Désactivation du listing des répertoires
Options -Indexes

# Interdiction de l'indexation par les moteurs de recherche
Header always set X-Robots-Tag "noindex,nofollow"

# Protection contre l'exécution de scripts dans uploads
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Limitation d'accès aux fichiers sensibles
<FilesMatch "^\.">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Configuration du cache pour les ressources statiques
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 day"
    ExpiresByType application/javascript "access plus 1 day"
</IfModule>

# Compression des fichiers texte
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Protection anti-spam basique
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Limitation du taux de requêtes (optionnel)
    # RewriteCond %{HTTP:X-Forwarded-For} !^$
    # RewriteCond %{REMOTE_ADDR} !^127\.0\.0\.1$
    # RewriteRule ^(.*)$ - [E=REMOTE_ADDR:%{HTTP:X-Forwarded-For}]
    
    # Blocage des bots indésirables
    RewriteCond %{HTTP_USER_AGENT} (bot|crawler|spider|scraper) [NC]
    RewriteRule .* - [F,L]
EndIf

# Authentification Basic (COMMENTÉE - décommentez si vous voulez restreindre l'accès)
# AuthType Basic
# AuthName "Zone restreinte Clartéo Lab"
# AuthUserFile /path/to/.htpasswd
# Require valid-user

# Protection CSRF basique
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Limitation du taux de requêtes (si mod_rewrite disponible)
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirection HTTPS (si disponible)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Protection contre les tentatives d'exploitation
    RewriteCond %{QUERY_STRING} [a-zA-Z0-9_]=http:// [OR]
    RewriteCond %{QUERY_STRING} [a-zA-Z0-9_]=https:// [OR]
    RewriteCond %{QUERY_STRING} [a-zA-Z0-9_]=(\.\.//?)+ [OR]
    RewriteCond %{QUERY_STRING} [a-zA-Z0-9_]=/([a-z0-9_.]//?)+ [NC]
    RewriteRule .* - [F]
</IfModule>